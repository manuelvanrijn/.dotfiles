{
  "$schema": "https://opencode.ai/config.json",
  "theme": "ayu-dark",
  "model": "github-copilot/gpt-5-mini",
  "autoupdate": true,
  "username": "Manuel",
  "instructions": [
    "CLAUDE.md",
    ".cursor/rules/*.md",
    ".github/instructions/*.md",
    "GEMINI.md",
    "WINDSURF.md"
  ],
  "tui": {
    "scroll_acceleration": {
      "enabled": true
    }
  },
  // enable would me we always have to to `opencode attach http: //localhost:4096`
  // "server": {
  //   "port": 4096,
  //   "hostname": "0.0.0.0",
  //   "mdns": true
  // },
  "keybinds": {
    "model_cycle_favorite": "ctrl+f"
  },
  "compaction": {
    "auto": true,
    "prune": true
  },
  "default_agent": "build",
  "agent": {
    "explore": {
      "mode": "subagent",
      //"model": "github-copilot/gpt-5-mini", // best free default
      "model": "github-copilot/gpt-5-mini", // fastest free
      //"model": "openai/ gpt-5.1-codex-mini", // more complex code tracing
      "prompt": "{file:./prompts/explore.txt}"
    },
    "general": {
      "mode": "subagent",
      // "model": "github-copilot/claude-sonnet-4.5",
      // "model": "openai/gpt-5.2"
      "model": "github-copilot/gpt-5-mini", // fastest free
    },
  },
  "plugin": [
    "opencode-openai-codex-auth@4.4.0",
    // "oh-my-opencode"
  ],
  "permission": {
    "agent-browser*": "allow",
    "augment-context-engine*": "allow",
    "brave-search*": "allow",
  },
  "mcp": {
    "augment-context-engine": {
      "type": "local",
      "command": [
        "auggie",
        "--mcp",
        "--mcp-auto-workspace"
      ]
    }
  },
  "provider": {
    "github-cp": {
      "name": "Copilot",
      "options": {
        "baseURL": "http://localhost:8317/v1",
        "api_key": "dummy-not-used"
      },
      "models": {
        "gpt-4.1": {
          "name": "GPT 4.1 [FREE]"
        },
        "gpt-4o": {
          "name": "GPT 4o [FREE]"
        },
        "gpt-5": {
          "name": "GPT 5"
        },
        "gpt-5-mini": {
          "name": "GPT 5 mini [FREE]"
        },
        "claude-opus-4.5": {
          "name": "Opus 4.5"
        },
        "claude-sonnet-4.5": {
          "name": "Sonnet 4.5"
        },
        "gemini-2.5-pro": {
          "name": "Gemini 2.5 Pro"
        }
      }
    },
    "openai": {
      "name": "OpenAI",
      "options": {
        "reasoningEffort": "medium",
        "reasoningSummary": "auto",
        "textVerbosity": "medium",
        "include": [
          "reasoning.encrypted_content"
        ],
        "store": false
      },
      "models": {
        "gpt-5.2": {
          "name": "GPT 5.2 (OAuth)",
          "limit": {
            "context": 272000,
            "output": 128000
          },
          "modalities": {
            "input": [
              "text",
              "image"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "none": {
              "reasoningEffort": "none",
              "reasoningSummary": "auto",
              "textVerbosity": "medium"
            },
            "low": {
              "reasoningEffort": "low",
              "reasoningSummary": "auto",
              "textVerbosity": "medium"
            },
            "medium": {
              "reasoningEffort": "medium",
              "reasoningSummary": "auto",
              "textVerbosity": "medium"
            },
            "high": {
              "reasoningEffort": "high",
              "reasoningSummary": "detailed",
              "textVerbosity": "medium"
            },
            "xhigh": {
              "reasoningEffort": "xhigh",
              "reasoningSummary": "detailed",
              "textVerbosity": "medium"
            }
          }
        },
        "gpt-5.2-codex": {
          "name": "GPT 5.2 Codex (OAuth)",
          "limit": {
            "context": 272000,
            "output": 128000
          },
          "modalities": {
            "input": [
              "text",
              "image"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "low": {
              "reasoningEffort": "low",
              "reasoningSummary": "auto",
              "textVerbosity": "medium"
            },
            "medium": {
              "reasoningEffort": "medium",
              "reasoningSummary": "auto",
              "textVerbosity": "medium"
            },
            "high": {
              "reasoningEffort": "high",
              "reasoningSummary": "detailed",
              "textVerbosity": "medium"
            },
            "xhigh": {
              "reasoningEffort": "xhigh",
              "reasoningSummary": "detailed",
              "textVerbosity": "medium"
            }
          }
        },
        "gpt-5.1-codex-max": {
          "name": "GPT 5.1 Codex Max (OAuth)",
          "limit": {
            "context": 272000,
            "output": 128000
          },
          "modalities": {
            "input": [
              "text",
              "image"
            ],
            "output": [
              "text"
            ]
          },
          "variants": {
            "low": {
              "reasoningEffort": "low",
              "reasoningSummary": "detailed",
              "textVerbosity": "medium"
            },
            "medium": {
              "reasoningEffort": "medium",
              "reasoningSummary": "detailed",
              "textVerbosity": "medium"
            },
            "high": {
              "reasoningEffort": "high",
              "reasoningSummary": "detailed",
              "textVerbosity": "medium"
            },
            "xhigh": {
              "reasoningEffort": "xhigh",
              "reasoningSummary": "detailed",
              "textVerbosity": "medium"
            }
          }
        }
      }
    }
  }
}
