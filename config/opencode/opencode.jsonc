{
  "$schema": "https://opencode.ai/config.json",
  "model": "github-cp/claude-sonnet-4.5",
  "small_model": "opencode/grok-code-fast-1",
  "theme": "one-dark",
  "autoupdate": true,
  "username": "Manuel",
  "instructions": [
    "CLAUDE.md",
    ".cursor/rules/*.md",
    ".github/instructions/*.md",
    "GEMINI.md",
    "WINDSURF.md",
  ],
  "tui": {
    "scroll_acceleration": {
      "enabled": true,
    },
  },
  "keybinds": {
    "model_cycle_favorite": "ctrl+f",
  },
  "compaction": {
    "auto": true,
    "prune": true
  },
  "default_agent": "plan",
  "agent": {
    "explore": {
      "prompt": "{file:./prompts/explore.txt}",
      "model": "opencode/glm-4.7-free",
    },
    "general": {
      "mode": "subagent",
      "model": "github-cp/claude-sonnet-4.5",
    },
    "build": {
      "model": "github-cp/claude-sonnet-4.5"
    },
    "plan": {
      "model": "openai/gpt-5.2"
    }
  },
  "plugin": [
    "opencode-openai-codex-auth",
    "@franlol/opencode-md-table-formatter@0.0.3"
  ],
  "permission": {
    "augment-context-engine*": "allow"
  },
  "mcp": {
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp@latest"
      ]
    },
    "brave-search": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-brave-search"
      ],
      "environment": {
        "BRAVE_API_KEY": "{env:BRAVE_API_KEY}"
      }
    },
    "fetch": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@tokenizin/mcp-npx-fetch"
      ]
    },
    "augment-context-engine": {
      "type": "local",
      "command": [
        "auggie",
        "--mcp"
      ]
    },
    "playwriter": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "playwriter@latest"
      ]
    }
  },
  "provider": {
    "github-cp": {
      "name": "Copilot",
      "options": {
        "baseURL": "http://localhost:8317/v1",
        "api_key": "dummy-not-used",
      },
      "models": {
        "gpt-4.1": {
          "name": "GPT 4.1 [FREE]"
        },
        "gpt-4o": {
          "name": "GPT 4o [FREE]"
        },
        "gpt-5": {
          "name": "GPT 5"
        },
        "gpt-5-mini": {
          "name": "GPT 5 mini [FREE]"
        },
        "claude-opus-4.5": {
          "name": "Claude Opus 4.5"
        },
        "claude-sonnet-4.5": {
          "name": "Claude Sonnet 4.5"
        },
        "gemini-2.5-pro": {
          "name": "Gemini 2.5 Pro"
        }
      }
    }
  }
}
